{
  "expo": {
    "name": "Social Club",
    "slug": "social-club-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.socialclub.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "此应用需要位置权限来为您推荐附近的用户。",
        "NSPhotoLibraryUsageDescription": "此应用需要访问您的相册来设置个人头像。",
        "NSCameraUsageDescription": "此应用需要相机权限来拍摄个人头像。",
        "CFBundleDisplayName": "Social Club"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.socialclub.mobile",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "socialclub",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "plugins": [
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "此应用需要位置权限来为您推荐附近的用户。"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "此应用需要访问您的相册来设置个人头像。"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "此应用需要相机权限来拍摄个人头像。"
        }
      ]
    ]
  }
}
